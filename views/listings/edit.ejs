<%- layout('/layouts/boilerplate') %>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h2>Edit your Listing!</h2>
      <form
        method="POST"
        action="/listings/<%=l._id%>?_method=PUT"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-2">
          <lable for="title" class="form-lable">Title</lable>
          <input
            name="listing[title]"
            value="<%=l.title%>"
            type="text"
            class="form-control"
            required
          />
          <div class="valid-feedback">
            <!-- works only when the input is valid -->
            Title looks good!
          </div>
          <div class="invalid-feedback">
            <!-- works only when the input is invalid -->
            Please enter the Title
          </div>
        </div>

        <div class="mb-2">
          <lable for="description" class="form-lable">Description</lable>
          <textarea name="listing[description]" class="form-control" required>
<%=l.description%></textarea
          >
          <div class="invalid-feedback">
            <!-- works only when the input is invalid -->
            Please enter a short description
          </div>
        </div>
        <div class="mb-2">
          Original Listing Image<br> 
         <img src="<%=resizedImage%>">
     
        </div>
        <div class="mb-2">
          <lable for="image" class="form-lable">Upload New Image</lable>
          <input
            name="listing[image]"
            
            type="file"
            class="form-control"
          
          />
     
        </div>
        <div class="row">
          <div class="mb-2 col-md-4">
            <lable for="price" class="form-lable">Price</lable>
            <input
              name="listing[price]"
              value="<%=l.price%>"
              type="number"
              required
              class="form-control"
            />
            <div class="invalid-feedback">
              <!-- works only when the input is invalid -->
              Price should be valid
            </div>
          </div>
          <div class="mb-2 col-md-4">
            <lable for="location" class="form-lable">Location</lable>

            <input
              name="listing[location]"
              value="<%=l.location%>"
              type="text"
              class="form-control"
              required
            />
            <div class="invalid-feedback">
              <!-- works only when the input is invalid -->
              Location should be valid
            </div>
          </div>
        </div>
        <div class="mb-2">
          <lable for="country" class="form-lable">Country</lable>
          <input
            name="listing[country]"
            value="<%=l.country%>"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">
            <!-- works only when the input is invalid -->
            Country name should be valid
          </div>
        </div>

        <button class="btn btn-dark add-btn mb-2">Edit</button>
      </form>
    </div>
  </div>
</body>
